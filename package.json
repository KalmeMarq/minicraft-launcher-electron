{
  "name": "minicraft-launcher",
  "version": "0.5.0",
  "license": "MIT",
  "main": "dist/main/index.js",
  "private": true,
  "author": {
    "name": "KalmeMarq",
    "url": "https://github.com/KalmeMarq"
  },
  "description": "A launcher for Minicraft.",
  "repository": {
    "type": "git",
    "url": "https://github.com/KalmeMarq/minicraft-launcher"
  },
  "scripts": {
    "dev": "concurrently \"npm dev:vite\" \" npm dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p ./src/main",
    "dist": "npm run build && electron-builder",
    "deploy": "electron-builder --publish always",
    "dist-all": "npm run build && electron-builder -mwl",
    "create-msi": "node release/msi.mjs",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf logs dist main src/out",
    "type-check": "tsc"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^1.2.0",
    "axios": "^0.26.1",
    "dayjs": "^1.11.1",
    "dompurify": "^2.3.6",
    "electron-is-dev": "^2.0.0",
    "filesize": "^8.0.7",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-modal": "^3.15.1",
    "react-router-dom": "^6.3.0",
    "vite": "^2.8.6",
    "electron-updater": "^5.0.1"
  },
  "devDependencies": {
    "@types/dompurify": "^2.3.3",
    "@types/node": "^17.0.22",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.0",
    "@types/react-modal": "^3.13.1",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "electron-wix-msi": "^4.0.0",
    "postcss": "^8.4.12",
    "sass": "^1.50.0",
    "typescript": "^4.6.2"
  }
}
